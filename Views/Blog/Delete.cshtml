@model MvcDemo.Models.Post

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<div class="container">
    <h3>Are you sure you want to delete this?</h3>
    <fieldset style="padding:50px;">
        <legend>Post: @Html.DisplayFor(model => model.Id)</legend>
        <div class="display-label">Title:</div>
        <div class="display-field">
           <b>
            @Html.DisplayFor(model => model.Title)
           </b>
        </div>

        <div class="display-label">Tag:</div>
        <div class="display-field">
            <b>
                @Html.DisplayFor(model => model.Tag)
            </b>
        </div>

        <div class="display-label">Date:</div>
        <div class="display-field">
            <b>
                @Html.DisplayFor(model => model.DateCreated)
            </b>
        </div>

        <div class="display-label">Content:</div>
        <div class="display-field">
            <b>
                @Html.DisplayFor(model => model.Content)
            </b>
        </div>
    </fieldset>
    @using (Html.BeginForm()) {
        <p>
            <input type="submit" value="Delete" /> |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }
</div>